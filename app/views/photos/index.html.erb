
<h1>InstaClam</h1>

<% @photos.each do |photo| %>

<div class="insta-photo">
  <%= image_tag photo.image_url %>
  <h2><%= photo.comment %></h2>
  <%= link_to 'Show', photo %>
  <%= link_to 'Edit', edit_photo_path(photo) %>
  <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %> 
<% end %>
</div>
<br><hr><br>
<%= link_to 'New Photo', new_photo_path %>
